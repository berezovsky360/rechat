{
  "name": "rechat",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18.x",
    "npm": ">=9.x"
  },
  "scripts": {
    "postinstall": "npm run install-frontend && npm run build-frontend && npm run install-backend",
    "install-frontend": "cd frontend && npm install",
    "build-frontend": "cd frontend && npm run build",
    "install-backend": "cd backend && npm install",
    "start": "cd backend && npm start"
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
} 